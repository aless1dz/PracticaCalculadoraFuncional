<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F3F4"
    tools:context=".MainActivity">

    <!-- Pantalla de Resultado -->
    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="#1E1E1E"
        android:text="0"
        android:textColor="#FFFFFF"
        android:backgroundTint="#455A64"
        android:textSize="48sp"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap" />

    <!-- Botones Numéricos y Operaciones -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResultado"
        app:layout_constraintVertical_bias="0.118">

        <!-- Botones de operación y número con diseño más moderno -->
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF9800"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="C"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#453C47"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="/"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#453C47"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="*"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#FF9800"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="DEL"
            android:textColor="#FFFFFF" />

        <!-- Botones numéricos y operacionales restantes -->
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="7"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="8"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="9"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_subtract"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#453C47"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="-"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="4"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="5"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="6"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#453C47"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="+"
            android:textColor="#FFFFFF" />

        <!-- Continuando con botones -->
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="1"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="2"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="3"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#453C47"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="="
            android:textColor="#FFFFFF" />

        <!-- Última fila -->
        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="0"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_columnWeight="1"
            android:backgroundTint="#000000"
            android:cornerRadius="12dp"
            android:shape="rectangle"
            android:text="."
            android:textColor="#FFFFFF" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
